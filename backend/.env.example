# ─────────────────────────────────────────────────────────────
#  Zomato Clone — Backend Environment Variables
#  Copy this file to .env and fill in your own values.
#  Never commit .env to version control.
# ─────────────────────────────────────────────────────────────

# ── Server ───────────────────────────────────────────────────
PORT=4005
NODE_ENV=development               # development | production
FRONTEND_URL=http://localhost:5173  # Must match your frontend origin exactly

# ── MongoDB ──────────────────────────────────────────────────
# Used for: users, orders, cart, tracking
MONGO_URI=mongodb://localhost:27017/zomato

# ── MySQL ────────────────────────────────────────────────────
# Used for: restaurants, menu items
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DB=zomato

# ── Redis ────────────────────────────────────────────────────
# Used for: caching, rate-limit store, real-time location
REDIS_URL=redis://127.0.0.1:6379

# ── JWT ──────────────────────────────────────────────────────
# Use a strong random string (64+ characters recommended)
JWT_SECRET=replace_with_a_strong_random_secret_min_64_chars
JWT_REFRESH_SECRET=replace_with_a_different_strong_random_secret

# ── Cloudinary (Image Uploads) ───────────────────────────────
# Optional — required only if image upload features are used
# Sign up free at https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
